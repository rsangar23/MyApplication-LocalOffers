            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_b3"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Mumbai"
            android:layout_below="@id/btn_b2"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_b4"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Kochi"
            android:layout_below="@id/btn_b3"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_b5"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Jalandhar"
            android:layout_below="@id/btn_b4"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_b6"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Delhi-NCR"
            android:layout_below="@id/btn_b5"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_c1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Chandigarh"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:textAllCaps="false"
            />
        <Button
