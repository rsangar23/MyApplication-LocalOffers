                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/img_btn"-->
                <!--android:text="auto detect location"-->
                <!--/>-->

        <!--</RelativeLayout>-->

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_loc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/or_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:layout_margin="8dp"
            />

        <TextView
            android:id="@+id/city_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:textSize="25dp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/or_txt"
            android:padding="8dp"
            android:layout_margin="8dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btn_a1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Ahmedabad"
            android:textAllCaps="false"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            />
        <Button
            android:id="@+id/btn_a2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_a1"
            android:text="Chennai"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_a3"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_a2"
            android:text="Kolkata"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_a4"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_a3"
            android:text="Pune"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_a5"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Ludhiana"
            android:layout_below="@id/btn_a4"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_a6"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Nagpur"
            android:layout_below="@id/btn_a5"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_b1"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Banglore"
            android:layout_centerHorizontal="true"
            android:textAllCaps="false"
            />
        <Button
            android:id="@+id/btn_b2"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="Amritsar"
            android:layout_below="@id/btn_b1"
