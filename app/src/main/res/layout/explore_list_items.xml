<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        android:clipToPadding="true"
        app:cardUseCompatPadding="true"
        android:layout_marginBottom="16dp"
        >
        <RelativeLayout
            android:id="@+id/exp_rel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_exp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/title_exp"
                android:textColor="#262626"
                android:layout_below="@+id/img_exp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:text="Title"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/info_exp"
                android:layout_below="@+id/title_exp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:maxLines="3"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/exp_vtxt"
                android:textColor="#262626"
                android:layout_below="@+id/info_exp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:text="Title"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/exp_vamt"
                android:layout_below="@+id/exp_vtxt"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="3dp"
                android:maxLines="3"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/exp_vw"
                android:layout_below="@+id/exp_vamt"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/exp_vtxt1"
                android:textColor="#262626"
                android:layout_below="@+id/exp_vw"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:text="Title"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/exp_vamt1"
                android:layout_below="@+id/exp_vtxt1"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:drawablePadding="10dp"
                android:ellipsize="end"
                android:text="Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>